<div class="chat_content">
  <div class="chat_header">
    <div class="chat_header_chatroom">hogefuga</div>
    <div class="chat_header_chatlink">
      <a href="">チャットを終了する</a>
    </div>
  </div>
  <div class="chat_main">
    <div class="chat_user">
      <div class="chat_user_name">Tom</div>
      <div class="chat_day">2023/7/30(Sun)00:00:00</div>
    </div>
    <div class="chat_content">おはよう</div>
    <div class="chat_user">
      <div class="chat_user_name">Tom</div>
      <div class="chat_day">2023/7/30(Sun)00:00:00</div>
    </div>
    <div class="chat_content">おはよう</div>
  </div>
  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
    <div class="form-input">
      <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'form-submit' %>
  <% end %>
</div>